include /src/layouts/pug/mixin.pug

div.registration
    h1 Регистрация аккаунта
    div.registration__name
        +texttype('Имя')(class='registration__name_input')
        +texttype('Фамилия')(class='registration__name_input')
    div.registration__sex
        +radio('sex', 'Мужчина')(class='radio-button' checked)
        +radio('sex', 'Женщина')(class='radio-button')
    div.registration__birth
        h3 дата рождения
        +texttype('ДД.ММ.ГГГГ')(class='registration__birth_input')
    div.registration__login
        h3 данные для входа в сервис
        +texttype('E-mail')(class='registration__login_input')
        +texttype('Пароль')(class='registration__login_input')
    div.registration__sub
        +check('special', 'Получать спецпредложения')(class='toggle-button registration__sub_input')
    div.registration__pay
        +fbutton('pay', 'Перейти к оплате')(class='registration__pay_button button__color pay_button')
    div.registration__go-login
        p Уже есть аккаунт на Toxin
        +fbutton('gologin', 'Войти')(class='registration__login_button button__white')